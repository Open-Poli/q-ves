<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="298dp"
        app:layout_constraintBottom_toTopOf="@+id/nombreEquipo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp"
        android:src="@drawable/logoqves" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nombreEquipo"
        android:layout_width="282dp"
        android:layout_height="40dp"
        android:fontFamily="@font/hlsimple"
        android:hint="Nombre del equipo"
        app:layout_constraintBottom_toTopOf="@+id/iniciarSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/botonUnirse"
        android:layout_width="282dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="@font/hlsimple"
        android:text="Jugar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreEquipo" />

    <Button
        android:id="@+id/iniciarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="@font/hlsimple"
        android:text="INICIAR"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonUnirse" />


</androidx.constraintlayout.widget.ConstraintLayout>