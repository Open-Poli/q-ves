<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hlsimple"
        android:text="Funcionalidades"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/elegirOpcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/elegirOpcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/otro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <androidx.cardview.widget.CardView
            android:id="@+id/crearJuego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="13dp"
            app:cardElevation="50dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="182dp"
                android:layout_height="211dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/crearPlantilla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/hlsimple"
                    android:text="Crear plantilla"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="37sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/iniciarJuego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="13dp"
            android:layout_marginLeft="20dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="182dp"
                android:layout_height="211dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/iniciarJuegoTexto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/hlsimple"
                    android:text="Iniciar juego"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="37sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/otro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elegirOpcion">

        <androidx.cardview.widget.CardView
            android:id="@+id/adminElementos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/purple_200"
            app:cardCornerRadius="13dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:layout_width="182dp"
                android:layout_height="211dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/administrarElementos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/hlsimple"
                    android:text="Administrar elementos"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="35sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>